<Project Sdk="Microsoft.NET.Sdk">
	<!-- IMPORTS -->
	<Import Project="../Targets/DesktopGL/Project_Compilation.targets" />
	<Import Project="../Targets/DesktopGL/Project_Settings.targets" />
	<Import Project="../Targets/DesktopGL/Project_Infos.targets" />

	<!-- HEADER -->
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net7.0</TargetFramework>
		<RollForward>Major</RollForward>
	</PropertyGroup>
	
	<!-- SYSTEM -->
	<PropertyGroup>
		<AssemblyName>StardustDefender</AssemblyName>
		<RootNamespace>StardustDefender.Game</RootNamespace>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<ApplicationIcon>Icon.ico</ApplicationIcon>
	</PropertyGroup>

	<!-- FILES (REMOVE) -->
	<ItemGroup>
	    <None Remove="Icon.ico" />
	    <None Remove="Icon.bmp" />
	</ItemGroup>

	<!-- FILES (RESOURCE) -->
	<ItemGroup>
		<!-- INCLUDE -->
		<None Update="System\Environment">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
				
		<!-- EMBED -->
		<EmbeddedResource Include="Icon.ico">
			<LogicalName>Icon.ico</LogicalName>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</EmbeddedResource>
		<EmbeddedResource Include="Icon.bmp">
			<LogicalName>Icon.bmp</LogicalName>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>

	<!-- DEPENDENCIES -->
	<ItemGroup>
		<PackageReference Include="MonoGame.Framework.DesktopGL" Version="3.8.1.303" />
		<PackageReference Include="MonoGame.Content.Builder.Task" Version="3.8.1.303" />
	</ItemGroup>

	<!-- PROJECT -->
	<ItemGroup>
		<ProjectReference Include="..\StardustDefender.Core\StardustDefender.DesktopGL.Core.csproj" />
		<ProjectReference Include="..\StardustDefender.Discord\StardustDefender.DesktopGL.Discord.csproj" />
	</ItemGroup>

	<!-- TARGETS -->
	<Target Name="RestoreDotnetTools" BeforeTargets="Restore">
		<Message Text="[ Restoring Dotnet Tools ]" Importance="high" />
		<Exec Command="dotnet tool restore" />
	</Target>
</Project>